# TheAgencyIQ Production Environment Configuration
# This file contains production-specific settings

NODE_ENV=production
PORT=5000

# Security Settings
TRUST_PROXY=true
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
CORS_ORIGIN=https://theagencyiq.ai

# Session Configuration
SESSION_SECURE=true
SESSION_SAME_SITE=strict
SESSION_MAX_AGE=86400000

# Database Configuration
DATABASE_SSL=true
DATABASE_CONNECTION_LIMIT=20
DATABASE_IDLE_TIMEOUT=30000

# OAuth Settings
OAUTH_SECURE_MODE=true
OAUTH_STATE_TIMEOUT=300000

# Analytics & Monitoring
ANALYTICS_ENABLED=true
ERROR_REPORTING_ENABLED=true
PERFORMANCE_MONITORING=true

# Reserved VM Configuration
RESERVED_VM=true
VM_MEMORY_LIMIT=2048
VM_CPU_LIMIT=1
VM_DISK_LIMIT=10240

# Auto-scaling Configuration
MIN_INSTANCES=1
MAX_INSTANCES=3
SCALE_THRESHOLD=80